PROGRAMANDO EM JAVA
public class Main {
    public static void main(String[] args) {

        double nota1 = 9;
        double nota2= 9.2;
        double media = (nota1 + nota2) / 2;

        System.out.println("A média é:" + media);
        
    }
}



    public class Main {
    public static void main(String[] args) {
            double E = 10;
            double APS = 10;
            double PO = 10;
            double mediaA1 = (E * 0.2) + (APS * 0.3) + (PO * 0.5);

            System.out.println("A média é:" + mediaA1);

    }
    }
}
